<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_addcard"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team11.healthcombinder.addcard"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageHeader"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginTop="32dp"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:hint="Enter Symptom" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/descriptionForm"
            android:textSize="18sp"
            android:hint="Enter here"
            android:layout_below="@+id/descriptionHeader"
            android:layout_alignStart="@+id/commentsHeader" />

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textMultiLine"
            android:ems="10"
            android:id="@+id/commentsForm"
            android:hint="Enter here"
            android:textSize="18sp"
            android:layout_below="@+id/commentsHeader"
            android:layout_alignStart="@+id/commentsHeader" />

        <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            app:fabSize="mini"
            app:srcCompat="@android:drawable/ic_menu_camera"
            android:layout_marginBottom="42dp"
            android:id="@+id/photoButton"
            app:backgroundTint="?attr/colorControlNormal"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="21dp" />

        <Button
            android:text="Save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submitButton"
            android:layout_alignBottom="@+id/photoButton"
            android:layout_alignEnd="@+id/commentsHeader" />

        <DatePicker
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datePicker4"
            android:scaleY="0.5"
            android:scaleX="0.5"
            android:headerBackground="?attr/colorPrimary"
            android:layout_alignBottom="@+id/commentsForm"
            android:layout_alignParentEnd="true" />

        <TextView
            android:text="Questions, Comments, or Concerns"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentsHeader"
            android:textSize="18sp"
            android:textColor="#000000"
            android:layout_marginTop="53dp"
            android:layout_below="@+id/descriptionForm"
            android:layout_centerHorizontal="true" />

        <TextView
            android:text="Description:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/descriptionHeader"
            android:textColor="#000000"
            android:textSize="18sp"
            android:layout_marginTop="91dp"
            android:layout_below="@+id/pageHeader"
            android:layout_alignStart="@+id/descriptionForm" />

    </RelativeLayout>

</RelativeLayout>
