<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_view_card"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team11.healthcombinder.ViewCard"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/pageHeader">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="40dp"
                android:weightSum="1">

                <TextView
                    android:text="@string/description"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/descriptionHeader"
                    android:textColor="#000000"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    tools:ignore="RtlHardcoded"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/descriptionForm"
                    android:textSize="18sp"
                    android:hint="Descrip text"
                    android:layout_marginLeft="15dp"
                    tools:ignore="HardcodedText,RtlHardcoded" />

                <TextView
                    android:text="@string/questions_comments_or_concerns"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/commentsHeader"
                    android:textSize="18sp"
                    android:textColor="#000000"
                    android:layout_marginTop="60dp"
                    android:layout_marginLeft="15dp"
                    tools:ignore="RtlHardcoded"
                    android:layout_marginBottom="5dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/commentsForm"
                    android:hint="Comments text"
                    android:textSize="18sp"
                    android:layout_marginLeft="15dp"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:text="Photos"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView14"
                    android:layout_marginTop="40dp"
                    android:layout_marginLeft="15dp"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="0.84"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/common_google_signin_btn_icon_light"
                        android:id="@+id/imageView7" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/common_google_signin_btn_icon_light"
                        android:id="@+id/imageView6" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/common_google_signin_btn_icon_light"
                        android:id="@+id/imageView5" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/common_google_signin_btn_icon_light"
                        android:id="@+id/imageView4" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:srcCompat="@drawable/common_google_signin_btn_icon_light"
                        android:id="@+id/imageView3" />

                </GridLayout>

            </LinearLayout>
        </ScrollView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pageHeader"
            android:gravity="center"
            android:textSize="24sp"
            android:hint="Symptom here"
            android:maxLines="1"
            android:maxLength="20"
            android:layout_alignTop="@+id/date"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp" />

        <TextView
            android:text="Date Here"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:id="@+id/date"
            android:layout_alignParentTop="false"
            android:layout_alignStart="@+id/submitButton"
            android:paddingTop="5dp"
            android:layout_marginLeft="275dp" />

    </RelativeLayout>
</RelativeLayout>
