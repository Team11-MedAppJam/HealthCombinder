<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@color/colorPrimaryDark"
    android:id="@+id/popup"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Current Password"
        android:layout_marginTop="64dp"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/new_password"
        android:background="#FFFFFF"
        android:layout_width="300dp"
        android:layout_below="@+id/textView2"
        android:layout_alignStart="@+id/current_password" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/current_password"
        android:background="#FFFFFF"
        android:layout_width="300dp"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/verified_password"
        android:background="#FFFFFF"
        android:layout_width="300dp"
        android:layout_below="@+id/textView3"
        android:layout_alignStart="@+id/new_password"
        android:layout_alignEnd="@+id/new_password" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Password"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_marginTop="22dp"
        android:textAlignment="center"
        android:gravity="center"
        android:layout_below="@+id/current_password"
        android:layout_centerHorizontal="true"
        android:background="@android:color/transparent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Retype Password"

        android:layout_marginTop="18dp"
        android:textSize="24dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/new_password"
        android:layout_alignStart="@+id/textView1"
        android:layout_alignEnd="@+id/textView1"
        android:background="@android:color/transparent" />

    <Button
        android:text="Submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/verified_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="91dp"
        android:id="@+id/submit_password"
        android:textSize="24sp"
        android:onClick="submit" />

</RelativeLayout>
