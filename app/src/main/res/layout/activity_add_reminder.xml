<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_reminder"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="team11.healthcombinder.add_reminder">

    <TextView
        android:text="Remind me of:"
        android:textSize="28sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="24dp"
        android:id="@+id/textView10" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView10"
        android:layout_alignParentStart="true"
        android:id="@+id/editText4"
        android:layout_alignParentEnd="true"
        android:textSize="24sp"
        android:hint="Appointment..." />

    <TextView
        android:text="Comment:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView12"
        android:textSize="28sp"
        android:layout_below="@+id/editText4"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/textView12"
        android:layout_alignParentStart="true"
        android:id="@+id/editText5"
        android:layout_alignParentEnd="true"
        android:textSize="24sp"
        android:hint="Ask questions or conern" />

    <Button
        android:text="Set Date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editText5"
        android:layout_alignParentStart="true"
        android:layout_marginTop="66dp"
        android:id="@+id/setDate"
        android:onClick="setDate"
        android:background="@android:color/transparent"
        android:layout_toStartOf="@+id/setTime" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setDate"
        android:layout_alignParentStart="true"
        android:id="@+id/dateDisplay"
        android:layout_alignEnd="@+id/setDate"
        android:textSize="22sp"
        android:textAlignment="center" />

    <Button
        android:text="Set Time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/setTime"
        android:layout_alignBaseline="@+id/setDate"
        android:layout_alignBottom="@+id/setDate"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/textView10"
        android:background="@android:color/transparent"
        android:onClick="setTime"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/setTime"
        android:id="@+id/timeDisplay"
        android:layout_alignEnd="@+id/setTime"
        android:textSize="22sp"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/setDate" />

</RelativeLayout>
